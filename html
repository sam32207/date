<body>
  <audio id="bgm" src="your-music.mp3" autoplay loop></audio>  <div id="page1" class="page active header-text">Hello my love</div>
  <div id="page2" class="page header-text">Good morning, I've been missing you a lot</div>
  <div id="page3" class="page header-text">So I'm asking you out today....<br><span style="font-family:'Shadows Into Light', cursive;">Will you go out with me for the whole day?</span>
    <br><br>
    <button class="yes" onclick="sayYes()">YES 🥰</button>
    <button class="no" onclick="sayNo()">no 🙅‍♀️</button>
  </div>
  <div id="pageYes" class="page header-text">
    <div style="font-size:2.5rem; font-weight:bold;">YEYYYY 🎉</div>
  </div>
  <div id="pageFinal" class="page header-text">See you later my wife ❤️<br><span style="font-family:'Shadows Into Light', cursive;">I love you so much 💕</span></div>
  <div id="pageNo" class="page header-text">😡😢 BIG NO 😢😡</div>  <script>
    let currentPage = 1;
    let noClicks = 0;

    // Auto transition through first 3 pages
    setTimeout(() => showPage(2), 2000);
    setTimeout(() => showPage(3), 4000);

    function showPage(num) {
      document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
      document.getElementById('page' + num).classList.add('active');
    }

    function sayYes() {
      showPage('Yes');
      launchConfetti();
      // After 3s, show final love message
      setTimeout(() => showPage('Final'), 3000);
    }

    function sayNo() {
      noClicks++;
      let noBtn = document.querySelector('.no');
      if (noClicks < 4) {
        noBtn.style.transform = `translate(${Math.random()*100-50}px, ${Math.random()*100-50}px)`;
      } else {
        showPage('No');
      }
    }

    function launchConfetti() {
      for (let i = 0; i < 100; i++) {
        let confetti = document.createElement('div');
        confetti.classList.add('confetti');
        confetti.style.left = Math.random() * 100 + 'vw';
        confetti.style.backgroundColor = `hsl(${Math.random()*360}, 100%, 50%)`;
        confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
        document.body.appendChild(confetti);

        setTimeout(() => {
          confetti.remove();
        }, 3000);
      }
    }
  </script></body>
