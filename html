    }
    .active {
      display: block;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    button {
      margin: 20px;
      padding: 15px 30px;
      font-size: 1.5rem;
      border: none;
